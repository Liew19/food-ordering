{
    "version": 2,
    "builds": [
      {
        "src": "build/web/**",
        "use": "@vercel/static"
      }
    ],
    "routes": [
      {
        "src": "/(.*)",
        "dest": "/index.html"
      }
    ],
    "build": {
      "env": {
        "FLUTTER_ROOT": "/opt/buildhome/flutter"
      },
      "scripts": {
        "build": "flutter pub get && flutter build web"
      }
    }
  }